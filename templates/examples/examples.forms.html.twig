{% extends '@A2CRM/layout.html.twig' %}

{% block content %}

<form action="{{ bookForm.url }}" method="POST" class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-4 control-label">{{ bookForm.fields['publishedAt'].title|trans }}</label>
        <div class="col-sm-8">
            {{ form_field(bookForm.fields['publishedAt']) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-4 control-label">{{ bookForm.fields['lastReadAt'].title|trans }}</label>
        <div class="col-sm-8">
            {{ form_field(bookForm.fields['lastReadAt']) }}
        </div>
    </div>

    <input type="submit" value="Submit">

</form>

{%  endblock %}